# Generado por Ansible - Role: grafana

apiVersion: 1

providers:
  # Configuraci칩n para dashboards desde archivos locales
  - name: 'default'
    orgId: 1
    folder: 'Infra Made Easy'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 10
    allowUiUpdates: true
    options:
      path: {{ grafana.data_dir }}/dashboards

  # Configuraci칩n para dashboards desde Grafana.com
  - name: 'grafana-dashboards'
    orgId: 1
    folder: 'Community Dashboards'
    type: file
    disableDeletion: false
    updateIntervalSeconds: 60
    allowUiUpdates: true
    options:
      path: {{ grafana.data_dir }}/dashboards
